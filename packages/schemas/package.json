{
  "author": "",
  "dependencies": {
    "zod": "^4.0.5"
  },
  "description": "Schemas for NHS Notify client configuration",
  "devDependencies": {
    "@asyncapi/cli": "^3.5.2",
    "@stoplight/spectral-cli": "^6.15.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "main": "src/index.ts",
  "name": "@nhsdigital/nhs-notify-client-config-schemas",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": "git@github.com:NHSDigital/nhs-notify-client-config.git",
  "scripts": {
    "build": "tsc",
    "dev": "asyncapi start studio ./client-config/client-config.yaml",
    "gen:asyncapi": "mkdir -p ./dist/asyncapi && asyncapi bundle ./client-config/client-config.yaml --output ./dist/asyncapi/client-config.yaml",
    "gen:jsonschema": "ts-node src/cli/generate-json.ts",
    "lint": "npm run lint:node && npm run lint:schema",
    "lint:fix": "eslint . --fix",
    "lint:node": "eslint .",
    "lint:schema": "spectral lint client-config/client-config.yaml",
    "prebuild": "rm -rf dist && npm run gen:asyncapi",
    "pregen:asyncapi": "npm run gen:jsonschema",
    "pregen:jsonschema": "rm -rf ./client-config/json",
    "prelint:schema": "npm run gen:jsonschema",
    "start": "asyncapi start preview ./client-config/client-config.yaml",
    "test": "jest",
    "test:unit": "jest"
  },
  "version": "1.0.1"
}
