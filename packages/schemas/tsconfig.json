{
  "compilerOptions": {
    "esModuleInterop": true,
    "extends": "@tsconfig/node22/tsconfig.json",
    "forceConsistentCasingInFileNames": true,
    "include": [
      "src/**/*",
      "./jest.config.ts"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  }
}
